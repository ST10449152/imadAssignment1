<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imge2"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="371dp"
            android:layout_height="278dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/akaya_telivigala"
            android:shadowColor="#000000"
            android:shadowDx="9.0"
            android:shadowDy="9.0"
            android:shadowRadius="9.0"
            android:text="The Book of The Dead"
            android:textAlignment="center"
            android:textColor="#FF0202"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textSize="80sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#007AE6F4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#219653"
                android:fontFamily="@font/allerta_stencil"
                android:shadowColor="#000000"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="9.0"
                android:text="Enter desired age:"
                android:textColor="#FF0000"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:ems="10"
                android:fontFamily="@font/aladin"
                android:inputType="text"
                android:text="Age (e.g. 21)" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="#FF5722"
            android:fontFamily="@font/akaya_telivigala"
            android:text="@string/button1_name"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:backgroundTint="#FF5722"
            android:fontFamily="@font/akaya_telivigala"
            android:text="@string/button2_name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:backgroundTint="#00BCD4"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="9.0"
            android:textColor="#C6FF00"
            android:textSize="26sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

